  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" --ignore-path .prettierignore",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\" --ignore-path .prettierignore",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
