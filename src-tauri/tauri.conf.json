{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "iDO",
  "version": "0.1.0",
  "identifier": "com.ido",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://127.0.0.1:1420/",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist",
    "features": [
      "pytauri/standalone"
    ]
  },
  "app": {
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$HOME/.config/ido/**"
          ],
          "deny": []
        }
      }
    },
    "windows": [
      {
        "title": "iDO",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": false,
        "shadow": false
      }
    ],
    "macOSPrivateApi": true
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:ido.db"
      ]
    },
    "process": {
      "allow-exit": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
